{% extends 'base.html.twig' %}



{% block body %}

 <h2 class="page-header"> Latest todos </h2>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>#</th>
                <th>Event</th>
                <th>on Date</th>
               
            </tr>

        </thead>

        {% for event in events %} {# making a loop in twig inside the variable events #}

            <tbody>
                <tr>
                    <th scope="row">{{event.id}}</th> {# the id of the event #}
                    <td>{{event.name}}</td> {# the name of the event #}
                    <td>{{event.datetime|date('F j, Y, g:i a')}}</td> {# the duedate of the event, when we want to print a date we must choose the format |date('F j, Y, g:i a') otherwise we will have error #}
                    <td> <a href="/details/{{event.id}}" class="btn btn-success">View</a> {# a tag to go to the path /details/{{event.id}} so we send the id of the record with the path (like when we are using get method ) #}   
                        <a href="/edit/{{event.id}}" class="btn btn-default">Edit</a>
                        <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>       
                    </td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>


{% endblock %}